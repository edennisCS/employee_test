class Employee:
    def __init__(self, name, age):
       self.name = name
       self.age = int(age)
       self.job = None

    def set_job(self, job):
        self.job = job

    def get_job(self):
        return self.job

    def update_age(self, age):
        self.age = int(age)

    def get_age(self):
        return self.age

    def __repr__(self):
        if self.job != None:
            return (f"Employee is {self.name}, their age is {self.age}, their job role is {self.job}.")
        else:
            return (f"Employee is {self.name}, their age is {self.age}.")

